<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uto.djf.test.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_get_screen_parameter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get Screen Parameter" />

            <Button
                android:id="@+id/btn_expend_listview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ExpendListView" />

            <Button
                android:id="@+id/btn_recycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recycler" />

            <Button
                android:id="@+id/btn_image_identify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image Identify" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
